<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th><i>Title</i></th>
      <th><i>Body</i></th>
      <th><i>Tags</i></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <%= link_to current_user.name.capitalize if current_user %>
     <%= link_to "My profile", user_path(current_user.id) if current_user %>
    <% @posts.each do |post| %>
      <tr>
        <td bgcolor="#CCCC00"><%= post.title %></td>
        <td bgcolor="#CCCC33"><%= post.body %></td>
        <td bgcolor="#CCCC66"><%= post.tags %></td>
        Posted by user <%= post.user %>
        <td bgcolor="#CCCC99"><%= link_to 'Show', post if current_user %></td>
        <td bgcolor="#CCCCCC"><%= link_to 'Edit', edit_post_path(post) if current_user %></td>
        <td bgcolor="#CCCCFF"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } if current_user %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3><%=  link_to 'New Post', new_post_path if current_user %></h3>