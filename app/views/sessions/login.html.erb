<h1>PLease login!</h1>

<%= form_tag(sessions_url, method: :post) do %>
 
  <div class="field">
  	<%= content_tag(:strong, 'Email') %>
    <%= text_field_tag :email %>
  </div>

  <div class="field">
  	<%= content_tag(:strong, 'Password') %>
    <%= password_field_tag :password %> 
  </div>

  <div class="actions">
    <%= submit_tag 'Login'%>
  </div>
<% end %>